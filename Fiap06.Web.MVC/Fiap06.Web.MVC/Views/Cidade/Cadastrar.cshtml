@model Fiap06.Web.MVC.Models.Cidade

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if(TempData["msg"] != null){
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(cidade => cidade.Nome)
        @Html.TextBoxFor(c => c.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.DataFundacao)
        @Html.TextBoxFor(c => c.DataFundacao, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Estado)
        @Html.DropDownListFor(c => c.EstadoId, 
       ViewBag.estados as SelectList, "Selecione o estado", new { @class = "form-control"})
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

